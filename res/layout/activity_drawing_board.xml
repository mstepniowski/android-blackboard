<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.stepniowski.drawingboard.BoardView
        android:id="@+id/boardView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingTop="2dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#ff333333"
        android:showDividers="">
        <Button
            android:id="@+id/yellow_color_button"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="#FFF6F792"
            android:onClick="onClick" />
        <Button
            android:id="@+id/gray_color_button"        
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="#FF333745"
            android:onClick="onClick" />
        <Button
            android:id="@+id/blue_color_button"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="#FF77C4D3"
            android:onClick="onClick" />
        <Button
            android:id="@+id/white_color_button"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="#FFFFFFFF"
            android:onClick="onClick" />
        <Button
            android:id="@+id/magenta_color_button"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="#FFEA2E49"
            android:onClick="onClick" />
        <Button
            android:id="@+id/black_color_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="#ff000000"
            android:onClick="onClick" />
    </LinearLayout>
</RelativeLayout>
